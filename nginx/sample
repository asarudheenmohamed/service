# /etc/nginx/sites-available/sample
server {
    listen 82;
    server_name staging.tendercuts.in;

    location = /favicon.ico { access_log off; log_not_found off; }
    location /static/ {
        root /home/django/api/tendercuts;
    }

    location / {
        include         uwsgi_params;
        uwsgi_pass      unix:/home/django/api/tendercuts/sample.sock;
    }
}

# /etc/nginx/sites-available/sample
server {
    listen 443;
    server_name api.tendercuts.in;

    ssl on;
    ssl_certificate /etc/ssl/tendercuts/ssl_merge.crt;
    ssl_certificate_key /etc/ssl/tendercuts/ssl.crt;

    access_log /var/log/nginx/nginx.vhost.access.log;
    error_log /var/log/nginx/nginx.vhost.error.log;

    location = /favicon.ico { access_log off; log_not_found off; }
    location /static/ {
        root /home/django/api/tendercuts/config;
    }

    location / {
        include         uwsgi_params;
        uwsgi_pass      unix:/home/django/api/tendercuts/tendercuts.sock;
    }
}